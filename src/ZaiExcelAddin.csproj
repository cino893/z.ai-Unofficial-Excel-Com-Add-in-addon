<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>ZaiExcelAddin</RootNamespace>
    <AssemblyTitle>Z.AI Excel Add-in</AssemblyTitle>
    <Description>AI assistant integrated with Microsoft Excel</Description>
    <Version>2.0.0</Version>
    <ExcelDnaAllowPackageReferenceResolution>true</ExcelDnaAllowPackageReferenceResolution>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ExcelDna.AddIn" Version="1.9.0" />
  </ItemGroup>
</Project>
